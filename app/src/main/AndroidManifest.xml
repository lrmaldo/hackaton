<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackaton">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To enable app invites -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- To geotag new posts with current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- To get pictures from camera for new posts -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetallActivity" />
        <activity
            android:name=".QuejasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NuevaQuejaActivity" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".ComentariosActivity"
            android:label="Comentarios"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".UserDetailActivity"
            android:label="@string/title_activity_user_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BaseActivity"></activity>

    </application>

</manifest>